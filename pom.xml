<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

    <groupId>org.adullact.iparapheur</groupId>
    <version>1.0.0-SNAPSHOT</version>
	<artifactId>iparapheur-surf</artifactId>
	<name>iParapheur Surf</name>
	<description>iParapheur Surf</description>
	<url>${project.artifactId}</url>

	<packaging>war</packaging>

	<properties>
		<jetty.port>5150</jetty.port>
	</properties>

	<build>
		<plugins>

			<!-- Define Eclipse Integration Plugin -->
			<plugin>
				<artifactId>maven-eclipse-plugin</artifactId>
                <version>2.6</version>
				<configuration>
					<wtpversion>1.5</wtpversion>
				</configuration>
			</plugin>
			
			<!-- Jetty Plugin for smoke screen tests -->
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<version>7.0.1.v20091125</version>
		        <configuration>
				    <scanIntervalSeconds>10</scanIntervalSeconds>
				    <stopPort>9966</stopPort>
				    <stopKey>foo</stopKey>
					<webAppConfig>
						<contextPath>/toto</contextPath>
					</webAppConfig>
					<connectors>
						<connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
							<port>${jetty.port}</port>
						</connector>
					</connectors>
					<scanTargets>
						<scanTarget>src/main/webapp</scanTarget>
					</scanTargets>
		        </configuration>
			</plugin>

            <!--plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>lesscss-maven-plugin</artifactId>
                <version></version>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin-->

        </plugins>
	</build>

	<dependencies>
	
		<!-- Surf -->
		<dependency>
			<groupId>org.springframework.extensions.surf</groupId>
			<artifactId>spring-surf</artifactId>
			<version>1.1.0-SNAPSHOT</version>
		</dependency>
		
		<!-- Surf API -->
		<dependency>
			<groupId>org.springframework.extensions.surf</groupId>
			<artifactId>spring-surf-api</artifactId>
			<version>1.1.0-SNAPSHOT</version>
		</dependency>
				
		<!-- Third party dependencies -->
		<dependency>
			<groupId>org.tuckey</groupId>
			<artifactId>urlrewritefilter</artifactId>
			<version>3.1.0</version>						
		</dependency>
		<dependency>
			<groupId>javax.servlet.jsp</groupId>
			<artifactId>jsp-api</artifactId>
			<version>2.1</version>
			<scope>compile</scope>
		</dependency>
		
	</dependencies>

</project>
